<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             BackgroundColor="#f4f4f4" 
             Title="Le nombre magique"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="formationXamarin.Views.GamePage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <StackLayout  >
            <Label Text="Deviner le nombre magique" FontSize="30" HorizontalTextAlignment="Center"/>
            
        </StackLayout>
        <StackLayout >
             <Label x:Name="entreMagicNumber" Text="Entre X et Y" HorizontalTextAlignment="Center"/>   
        </StackLayout>
        
        <StackLayout>
                <Entry HeightRequest="100" FontSize="50" Margin="80,40,80,0" x:Name="numberEntry" Keyboard="Numeric" Placeholder="?" HorizontalTextAlignment="Center"/>
            </StackLayout>
            <Button Margin="80,0,80,0" Text="Deviner" TextColor="White" BackgroundColor="Blue" Clicked="Deviner_Clicked"/>
        
        
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>
