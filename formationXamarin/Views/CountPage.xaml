<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             Title="CountPage" 
             x:Class="formationXamarin.Views.CountPage">
    <ContentPage.Content>
        <StackLayout Spacing="0" Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <StackLayout BackgroundColor="#518faa"  HorizontalOptions="FillAndExpand" VerticalOptions="Start">
                <Label x:Name="countLabel" HorizontalTextAlignment="Center"  Text="0" FontSize="80" />
            </StackLayout>
            <Image Source="lab_separator" Aspect="AspectFill" />
            
                <Frame  HasShadow="false" VerticalOptions="FillAndExpand">
                    <Button Style="{StaticResource boutonLabStyle}" VerticalOptions="Center" Margin="30,30" Text="Compter" Clicked="CountButton_Clicked" />
                </Frame>
                
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>